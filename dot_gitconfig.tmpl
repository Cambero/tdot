  path = ~/.dotfiles/gitconfig.global
  path = ~/.dotfiles/gitalias/gitalias.txt

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[user]
  name = {{ .name }}
  email = {{ .email }}

# Only work inside dirs that are git repositories
